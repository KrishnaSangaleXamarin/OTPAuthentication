<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OTPAuthentication.Views.OtpAuthentication.NotificationAddView"
             Title="Add" Padding="10">
    
    
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label Text="Title"/>
                <Entry Placeholder="Title" x:Name="title"/>
            </StackLayout>
            <StackLayout>
                <Label Text="Message"/>
                <Entry Placeholder="Message" Text="" x:Name="message"/>
            </StackLayout>

            <Button Text="Save" BackgroundColor="#CD72FC" TextColor="White"
                    CornerRadius="5" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>